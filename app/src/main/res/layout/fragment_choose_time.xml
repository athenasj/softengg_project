<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.makati.softengg_project.LandingFragment"
    android:background="@drawable/screen_normal_nexus"
    >

    <android.support.constraint.Guideline
        android:id="@+id/guide_choosetimer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <android.support.constraint.Guideline
        android:id="@+id/guide_choosetimer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        app:srcCompat="@drawable/shape_roundedsquare"
        app:layout_constraintTop_toTopOf="@+id/guide_choosetimer1"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <RadioGroup
        android:id="@+id/timer_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginTop="0dp">

        <RadioButton
        android:id="@+id/setTimer_30"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="30 SECONDS"
        android:textSize="25dp"
        android:layout_marginTop="100dp"
            android:textColor="@color/radioTint"
            android:buttonTint="@color/radioTint"
            android:textStyle="bold"
        />

        <RadioButton
            android:id="@+id/setTimer_45"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="45 SECONDS"
            android:textSize="25dp"
            android:textColor="@color/radioTint"
            android:layout_marginTop="50dp"
            android:buttonTint="@color/radioTint"
            android:textStyle="bold"
            />

        <RadioButton
            android:id="@+id/setTimer_60"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="60 SECONDS"
            android:textSize="25dp"
            android:textColor="@color/radioTint"
            android:layout_marginTop="50dp"
            android:buttonTint="@color/radioTint"
            android:textStyle="bold"
            />

        </RadioGroup>

    <ImageButton
        android:id="@+id/submit_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btn_add_selector"
        android:background="#0000"
        android:textColor="@color/radioTint"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/guide_choosetimer2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:onClick="onSelectFragment"/>

    <ImageButton
        android:id="@+id/submit_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btn_sub_selector"
        android:background="#0000"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toRightOf="@+id/submit_add"
        android:layout_marginLeft="0dp" />


</android.support.constraint.ConstraintLayout>
