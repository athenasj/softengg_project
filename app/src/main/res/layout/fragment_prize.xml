<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.makati.softengg_project.LandingFragment"
    android:background="@drawable/screen_normal_nexus"
    >

    <android.support.constraint.Guideline
        android:id="@+id/guide_prize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <android.support.constraint.Guideline
        android:id="@+id/guide_btnprize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/banner_prize"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="-20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
 />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/container_result"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="-20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guide_prize"
        android:layout_marginTop="0dp" />

    <ImageButton
        android:id="@+id/btn_shuffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000"
        app:srcCompat="@drawable/btn_random_selector"
        app:layout_constraintTop_toTopOf="@+id/guide_btnprize"
        android:layout_marginTop="0dp"
        android:layout_marginRight="60dp"
        app:layout_constraintRight_toRightOf="@+id/imageView11" />

    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon_home"
        android:background="#0000"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/text_prize"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:text="LOREM IPSUM CHUCHUCHUCHCUCHUCHUHCUC"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        android:layout_marginTop="70dp" />


</android.support.constraint.ConstraintLayout>