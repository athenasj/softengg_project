<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.makati.softengg_project.LandingFragment"
    android:background="@drawable/screen_landing_nexus"
    >


    <android.support.constraint.Guideline
        android:id="@+id/guide_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.38" />

    <android.support.constraint.Guideline
        android:id="@+id/guide_buttoncontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

    <android.support.constraint.Guideline
        android:id="@+id/guide_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <android.support.constraint.Guideline
        android:id="@+id/guide_btns1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/guide_btns2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/title"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guide_title1"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
  />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/shape_roundedsquare"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guide_buttoncontainer" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guide_buttoncontainer"
   >

        <ImageButton
            android:id="@+id/submit_solo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000"
            app:srcCompat="@drawable/btn_solo_selector"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:id="@+id/submit_multi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000"
            app:srcCompat="@drawable/btn_multi_selector"
            android:layout_marginTop="0dp" />

        <ImageView
            android:id="@+id/splash_plus"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/caption_landing"

            />

    </LinearLayout>




</android.support.constraint.ConstraintLayout>
