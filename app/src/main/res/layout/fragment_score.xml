<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent"
     android:layout_width="match_parent"
    android:background="@drawable/screen_splash_nexus"
    >

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/Score1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="TextView"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/Scoretitle"
        android:layout_alignStart="@+id/Score2" />

    <TextView
        android:id="@+id/Score2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Score1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/Score3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Score2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/Score4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Score3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/Score5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Score4"
        android:layout_below="@+id/Score4"
        android:layout_marginTop="72dp"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/Scoretitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:text="S C O R E"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/clearScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Scores"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/Score5"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="17dp" />
</RelativeLayout>
